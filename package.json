{
  "name": "react-international-phone",
  "version": "0.1.0",
  "description": "International phone component for React",
  "private": true,
  "author": "Yurii Brusentsov <yuriybrusentsov@gmail.com>",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "webpack",
    "test": "jest --coverage",
    "storybook": "start-storybook -p 6006",
    "lint": "yarn lint:ts && yarn lint:scss",
    "lint:ts": "eslint ./src --ext .ts,.tsx --config .eslintrc --fix",
    "lint:scss": "stylelint \"**/*{.css,.scss}\" --custom-syntax postcss-scss --fix",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goveo/react-international-phone.git"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@storybook/addon-knobs": "^6.0.28",
    "@storybook/builder-webpack5": "^6.5.12",
    "@storybook/manager-webpack5": "^6.5.12",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.5.12",
    "@testing-library/react": "^12.1.5",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.1.1",
    "@types/react": "^16.14.32",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^4.33.0",
    "css-loader": "^6.7.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.21.3",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.17",
    "postcss-scss": "^4.0.5",
    "prettier": "^2.7.1",
    "sass": "^1.55.0",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "stylelint": "^14.13.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.3.0",
    "ts-jest": "^29.0.3",
    "ts-loader": "^8.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.0.5",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(ts|tsx|js)": [
      "yarn lint:ts",
      "yarn format"
    ],
    "*.(css|scss)": [
      "yarn lint:scss"
    ]
  },
  "engines": {
    "node": "16.x"
  }
}
